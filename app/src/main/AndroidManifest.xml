<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.enjoystudio.enchat">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.fullScreen" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/AppTheme.fullScreen" />
        <activity android:name=".FriendListActivity" />
        <activity
            android:name=".BaseAppActivity"
            android:label="@string/title_activity_base_app" />
        <activity android:name=".conversation.Chat" />
        <activity android:name=".friend.ProfileActivity" />
        <activity android:name=".friend.AddFriend"></activity>
    </application>

</manifest>